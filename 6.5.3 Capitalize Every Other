#include <iostream>
#include <string>
#include <cctype>
using namespace std;
string output = "";
string CapitalizeOddIndices(string userInput){
   for (int i = 0; i < userInput.size(); i++){
      if (i % 2 != 0){
         output += toupper(userInput.at(i));
      }
      else{
         output += userInput.at(i);
   }
}
return output;
}
int main() {
   string input;
   string output;

   getline(cin, input);     
   output = CapitalizeOddIndices(input);
   
   cout << output << endl;

   return 0;
}
